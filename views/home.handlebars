<!-- CTA -->
<section id="cta" class="wrapper style4">
  <div class="inner">
    <header>
      <h2>RSVP</h2>
      <p>Please let us know whether you'll be able to share our big day.</p>
    </header>
  </div>
  <div class="inner">
    <form method="post" action="#">
      <div class="row uniform">
